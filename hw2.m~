%% 1.1

im = imread('chickenbroth_01.jpg');
%%
% figure; imagesc(DoGPyramid(:,:,5))
%%

sigma0 =1;
k = sqrt(2);
levels = [-1 0 1 2 3 4];

[GaussianPyramid] = createGaussianPyramid(im, sigma0, k, levels);

vGaussianPyr = figure
displayPyramid(GaussianPyramid);

%% 1.2

[DoGPyramid, DoGLevels] = createDoGPyramid(GaussianPyramid, levels);

vDoGPyr = figure
displayPyramid(DoGPyramid);

%% 1.3

PrincipalCurvature = computePrincipalCurvature(DoGPyramid);

% Test = PrincipalCurvature;
% figure
% imagesc(Test(:,:,5))
% hold on
% displayPyramid(DoGPyramid);



thetac = 0.03;

%% Test
points = DoGPyramid;

points(abs(PrincipalCurvature) > 12) = nan;
figure;displayPyramid(points)

%%

locs = getLocalExtrema(DoGPyramid, DoGLevels, PrincipalCurvature,.03, 12)

%%
% figure; hold on; imagesc(im);%scatter(locs(:,1),locs(:,2))
